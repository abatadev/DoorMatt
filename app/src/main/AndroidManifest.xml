<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doormatt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoorMatt">
        <activity android:name=".qrcode.QRCodeActivity"/>
        <activity
            android:name=".resident.ResidentActivity"
            android:label="@string/title_activity_resident"
            android:theme="@style/Theme.DoorMatt.NoActionBar" />
        <activity android:name=".admin.NewGuardActivity" />
        <activity android:name=".guard.GuardActivity" />
        <activity android:name=".admin.AdminActivity" />
        <activity android:name=".SignUpAdminActivity" />
        <activity android:name=".VisitorsPanelActivity" />
        <activity android:name=".admin.NewResidentActivity" />
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>