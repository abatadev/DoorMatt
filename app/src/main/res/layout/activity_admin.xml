<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminActivity"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/door_mat"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/ColorPrimary"
        android:textAllCaps="true"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/ColorSecondary"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/new_resident_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Resident"
            android:textStyle="bold"
            android:background="@drawable/rounded_corners_button"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/new_guard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Guard"
            android:textStyle="bold"
            android:background="@drawable/rounded_corners_button"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:layout_weight="1"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Visitor"
            android:textStyle="bold"
            android:background="@drawable/rounded_corners_button"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/read_qr_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read QR"/>

        <EditText
            android:id="@+id/admin_resident_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_resident_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>