<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:padding="8dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/guard_resident_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_avatar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/card_view_guard_resident_name_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resident Name"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card_view_guard_resident_room_number_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Room Number"/>

                    <TextView
                        android:id="@+id/card_view_guard_status_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>