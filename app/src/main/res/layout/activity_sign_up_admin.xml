<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16sp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/bebas"
            android:text="Door Mat"
            android:textAllCaps="true"
            android:textColor="@color/ColorPrimary"
            android:textSize="48sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Sign Up Admin"
            android:textColor="@color/ColorSecondary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/admin_sign_up_login_email_editText"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:autofillHints="Email"
            android:background="@drawable/rounded_corners_text_input"
            android:hint="@string/email"

            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/admin_sign_up_login_password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:autofillHints="Password"
            android:background="@drawable/rounded_corners_text_input"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/admin_sign_up_login_confirm_password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:autofillHints="Confirm Password"
            android:background="@drawable/rounded_corners_text_input"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/admin_sign_up_login_submit_button"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/rounded_corners_button"
            android:text="@string/sign_up"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>