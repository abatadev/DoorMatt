<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewResidenceActivity"
    android:background="@drawable/gradient_white_grey">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Door Mat"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/ColorPrimary"
            android:textAllCaps="true"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Residents"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/ColorSecondary"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="8dp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView"
                        android:layout_width="94dp"
                        android:layout_height="94dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="start"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/sample_avatar" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="Edit Picture"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:drawableStart="@drawable/ic_baseline_photo_camera_24"
                        android:drawableTint="@color/white"
                        android:drawablePadding="4dp"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_corners_custom_button"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/rounded_corners_text_input"
                    android:padding="8dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/rounded_corners_text_input"
                    android:padding="8dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/rounded_corners_text_input"
                    android:padding="8dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Room #"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/rounded_corners_text_input"
                    android:padding="8dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/rounded_corners_text_input"
                    android:padding="8dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/rounded_corners_text_input"
                    android:padding="8dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/rounded_corners_text_input"
                    android:padding="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_check_24"
                    android:drawableTint="@color/white"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corners_button"
                    android:padding="8dp"
                    android:layout_gravity="right"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>



</LinearLayout>